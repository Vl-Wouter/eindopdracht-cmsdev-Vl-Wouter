{% block form_errors %}
    {% if errors|length > 0 %}
        {% if compound %}
            {# ... display the global form errors #}
            <ul>
                {% for error in errors %}
                    <li class="alert -danger">{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% else %}
            {# ... display the errors for a single field #}
            <ul>
                {% for error in errors %}
                    <li class="alert -danger">{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endif %}
{% endblock form_errors %}

{% block form_row %}
    <div class="form__group">
        {{ form_label(form) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
{% endblock %}