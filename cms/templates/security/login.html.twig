{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <main class="container login flex flex-center">
        <section class="card -horizontal">
            <main class="row">
                <section class="col-6 card__image" id="loginImage">
                    <h5>Arte-Tech</h5>
                    <p class="image__attribution">Photo by Annie Spratt on Unsplash</p>
                </section>
                <section class="col-6 card__content">
                    <h1>Log in.</h1>
                    <p>Make your outsourcing easier with Arte-Tech</p>
                    <form method="post" class="form__login">
                        <section class="form__group">
                            <label for="inputUsername"><span class="iconify" data-icon="fa-solid:user" data-inline="false"></span></label>
                            <input type="text" name="username" value="{{ last_username }}" id="inputUsername" placeholder="Gebruikersnaam" required autofocus>
                        </section>
                        <section class="form__group">
                            <label for="inputPassword"><span class="iconify" data-icon="ic:baseline-vpn-key" data-inline="false"></span></label>
                            <input type="password" name="password" id="inputPassword" required>
                        </section>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" placeholder="Wachtwoord">
                        <button type="submit" class="btn -lg -primary">Log in</button>
                    </form>
                </section>
            </main>
        </section>
    </main>
